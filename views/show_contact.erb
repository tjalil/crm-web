<% content_for :title do %>
  Displaying Contact
<% end %>

<form action="/contacts" method="POST" class="basic_box">
  <fieldset>
    <div class="show_legend">
      <legend>ID: <%= @contact.id %></legend>
    </div>

    <div id="first_name">
      <label for="first_name">First Name: </label>
      <br>
      <p id="show_first_name_input"><%= @contact.first_name %></p>
    </div>

    <div id="last_name">
      <label for="last_name">Last Name: </label>
      <br>
      <p id="show_last_name_input"><%= @contact.last_name %></p>
    </div>

    <div id="email">
      <label for="email">Email: </label>
      <br>
      <p id="show_email_input"><%= @contact.email %></p>
    </div>    

    <div id="notes">
      <label for="notes">Notes: </label>
      <br>
      <p id="show_notes_input"><%= @contact.notes %></p>
    </div>

    <div id="created_at">
      <label for="email">Created: </label>
      <br>
      <p id="created_at_input"><%= @contact.created_at %></p>
    </div> 
  </fieldset>
</form>

<form class="delete_contact_btn" action="/contacts/<%= @contact.id %>" method="POST">
  <input type="hidden" name="_method" value="delete">
  <input type="submit" name="delete contact" value="Delete Contact">
</form>

<form class="edit_contact_btn" action="/contacts/<%= @contact.id %>/edit" method="GET">
  <input type="submit" name="edit contact" value="Edit Contact">
</form>